@model IEnumerable<GameHive.Models.Tag>
<h2>Tags</h2>
<a asp-action="Add" class="btn btn-primary">Добави нов етикет</a>
<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-warning">Редактирай</a>
                    <form asp-action="Delete" asp-route-id="@tag.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Изтрии</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>