@using GameHive.Core.IServices
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameHive.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
</head>
<body>
    <header>
        <nav class="navbar-style" style="background-color: #0b1928;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameHive</a>

                <div class="navbar-collapse collapse d-flex justify-content-center flex-grow-1">
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <button class="navbar-button">Home</button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <button class="navbar-button">Privacy</button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tags" asp-action="Index">
                                <button class="navbar-button">Tags</button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Games" asp-action="Index">
                                <button class="navbar-button">Games</button>
                            </a>
                        </li>
                    </ul>
                </div>
                @inject IShoppingCartService ShoppingCartService
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index" aria-label="Shopping Cart">
                        <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" stroke-linejoin="round" stroke-linecap="round" viewBox="0 0 24 24" stroke-width="3" fill="none" stroke="#273349" class="icon">
                            <!-- Increased width, height, and stroke-width -->
                            <circle r="1.5" cy="21" cx="9" fill="#273349"></circle> <!-- Increased radius for circles -->
                            <circle r="1.5" cy="21" cx="20" fill="#273349"></circle> <!-- Increased radius for circles -->
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" stroke="#273349"></path> <!-- Stroke color remains the same -->
                        </svg>
                    </a>
                <div class="auth-links">
                    <partial name="_LoginPartial" />
                </div>


            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color:#0b1928;">
        <div class="container">
            &copy; 2025 - GameHive - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>