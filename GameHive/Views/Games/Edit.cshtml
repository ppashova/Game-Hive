@model GameViewModel

<h2>Edit Game</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GameId" />

    <div class="form-group">
        <label asp-for="Name">Game Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tags</label>
        <select asp-for="SelectedTagIds" asp-items="@(new SelectList(Model.AvailableTags, "TagId", "TagName", Model.SelectedTagIds))" multiple="multiple" class="form-control"></select>
        <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>