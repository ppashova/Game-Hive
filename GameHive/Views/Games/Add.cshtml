@model GameHive.Models.GameViewModel

<div class="container mt-5">
    <h2 class="mb-4 text-center">Add Game</h2>
    <form asp-action="Add" method="post" class="card p-4 shadow-sm">
        <div class="form-group mb-4">
            <label asp-for="Name" class="font-weight-bold mb-2"></label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter game name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label class="font-weight-bold mb-2">Tags</label>
            <div class="row">
                @foreach (var tag in Model.AvailableTags)
                {
                    <div class="col-md-4 col-sm-6 mb-2">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input"
                                   id="tag_@tag.Id"
                                   name="SelectedTagIds"
                                   value="@tag.Id"
                            @(Model.SelectedTagIds.Contains(tag.Id) ? "checked" : "") />
                            <label class="form-check-label" for="tag_@tag.Id">@tag.Name</label>
                        </div>
                    </div>
                }
            </div>
            <span asp-validation-for="SelectedTagIds" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Price" class="font-weight-bold mb-2"></label>
            <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" placeholder="Enter price" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="form-group d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
            <button type="submit" class="btn btn-primary btn-lg px-5">Add Game</button>
        </div>
    </form>
</div>

<style>
    .form-control-lg {
        font-size: 1.1rem;
        padding: 1rem;
    }

    .btn-lg {
        font-size: 1.1rem;
        padding: 0.75rem 1.5rem;
    }

    .card {
        border-radius: 10px;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }

    .form-check-label {
        font-size: 1rem;
    }

    .text-danger.small {
        font-size: 0.875rem;
    }
</style>