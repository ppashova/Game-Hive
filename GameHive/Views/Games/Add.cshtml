@model GameDetailsViewModel

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Game.Name</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/GameDetails.css">
    <!-- Add Bootstrap Icons for carousel controls -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5">
        <div class="game-container" style="max-width: 1200px;">
            <div class="row">
                <!-- Left column: Image carousel -->
                <div class="col-md-7 image-section">
                    <h3>Изображения на играта</h3>
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div id="gameImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <!-- Carousel indicators -->
                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    <button type="button" data-bs-target="#gameImagesCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                            aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i+1)"></button>
                                }
                            </div>

                            <!-- Carousel items -->
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@Model.Images[i]" class="d-block carousel-image" alt="Game Image @(i+1)">
                                    </div>
                                }
                            </div>

                            <!-- Carousel controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#gameImagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#gameImagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    }
                    else
                    {
                        <p class="no-images">Няма изображения за тази игра.</p>
                    }
                </div>

                <!-- Right column: Game information -->
                <div class="col-md-5 game-info">
                    <div class="d-flex justify-content-between align-items-start">
                        <h2 class="mb-3">@Model.Game.Name</h2>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="admin-menu">
                                <button class="dots-menu-btn" id="adminMenuBtn" aria-label="Admin Menu">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon">
                                        <circle cx="12" cy="5" r="1"></circle>
                                        <circle cx="12" cy="12" r="1"></circle>
                                        <circle cx="12" cy="19" r="1"></circle>
                                    </svg>
                                </button>
                                <div id="adminDropdown" class="admin-dropdown">
                                    <a asp-controller="Games" asp-action="Edit" asp-route-id="@Model.Game.GameId" class="admin-btn">Редактирай</a>
                                    <a href="javascript:void(0);" onclick="document.getElementById('deleteForm-@Model.Game.GameId').submit();" class="admin-btn">Изтрии</a>
                                    <a asp-action="Details" asp-route-id="@Model.Game.GameId" class="admin-btn">Детайли</a>
                                </div>

                                <form id="deleteForm-@Model.Game.GameId" method="post" asp-action="Delete" asp-route-id="@Model.Game.GameId" style="display: none;">
                                    @Html.AntiForgeryToken()
                                </form>
                            </div>
                        }
                    </div>

                    <p class="description">
                        @(string.IsNullOrEmpty(Model.Game.FullDescription) ? "Няма налично описание за тази игра." : Model.Game.FullDescription)
                    </p>

                    <a href="javascript:void(0);" onclick="document.getElementById('addToCartForm-@Model.Game.GameId').submit();"
                       class="cart-btn">
                        <span>Добави в количката</span>
                    </a>

                    <form id="addToCartForm-@Model.Game.GameId" method="post" asp-controller="ShoppingCart" asp-action="AddToCart" style="display: none;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.Game.GameId" />
                        <input type="hidden" name="quantity" value="1" />
                    </form>

                    <h3>Етикети</h3>
                    <ul class="tag-list">
                        @if (Model.Tags != null && Model.Tags.Any())
                        {
                            foreach (var tag in Model.Tags)
                            {
                                <li class="tag-item">@tag.Name</li>
                            }
                        }
                        else
                        {
                            <li class="no-tags">Тази игра няма етикети.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS for carousel functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS for dropdown menu -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get the admin menu button and dropdown
            const adminMenuBtn = document.getElementById('adminMenuBtn');
            const adminDropdown = document.getElementById('adminDropdown');

            // Toggle dropdown when button is clicked
            if (adminMenuBtn) {
                adminMenuBtn.addEventListener('click', function(event) {
                    event.stopPropagation();
                    if (adminDropdown.classList.contains('show')) {
                        adminDropdown.classList.remove('show');
                    } else {
                        adminDropdown.classList.add('show');
                    }
                });
            }

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (adminDropdown && !event.target.closest('.admin-menu')) {
                    adminDropdown.classList.remove('show');
                }
            });

            // Prevent dropdown from closing when clicking inside it
            if (adminDropdown) {
                adminDropdown.addEventListener('click', function(event) {
                    event.stopPropagation();
                });
            }
        });
    </script>
</body>
</html>