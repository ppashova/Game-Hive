<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin-style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-gamepad me-2"></i>GameHive Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                <i class="fas fa-user-circle me-1"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex">
        <div class="sidebar">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="user-info">
                    <h6>Admin User</h6>
                    <span>Administrator</span>
                </div>
            </div>

            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")"
                       href="/Admin/Dashboard">
                        <i class="fas fa-tachometer-alt sidebar-icon"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "GameRequests" ? "active" : "")"
                       href="/Admin/GameRequests">
                        <i class="fas fa-upload sidebar-icon"></i> Manage Games
                    </a>
                </li>
                <li class="nav-item">
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Tags" ? "active" : "")"
                       asp-area="Admin" asp-controller="Tags" asp-action="Index">
                        <i class="fas fa-tags sidebar-icon"></i> Manage Tags
                    </a>
                </li>
                <li class="nav-item">
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Publishers" ? "active" : "")"
                       asp-area="Admin" asp-controller="Publishers" asp-action="Index">
                        <i class="fas fa-users sidebar-icon"></i> Manage Users
                    </a>
                </li>
                <li>
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="SupportTickets">
                        <i class="fas fa-cogs sidebar-icon"></i> Manage Support Tickets </a>
                </li>
            </ul>
        </div>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>