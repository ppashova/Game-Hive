<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar" style="background-color:#0b1928;">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand text-light" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    GameHive Admin
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Home", new { area = "" })">Главна страница</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end vh-100" style="width: 250px;">
            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Admin/Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Admin/GameRequests">Manage Games</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Admin/Tags">Manage Tags</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Admin/Users">Manage Users</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="p-4" style="flex-grow: 1;">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
