@model IEnumerable<GameHive.Models.Game>
<div class="container mt-4">
    <h2 class="text-center">Game Upload Requests</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Brief Description</th>
                    <th>Submitted On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.Where(g => g.RequestStatus == GameHive.Models.enums.RequestEnums.Pending))
                {
                    <tr>
                        <td>@game.Name</td>
                        <td>@game.BriefDescription</td>
                        <td>@game.RequestTime.ToShortDateString()</td>
                        <td>
                            <a asp-area="Admin" asp-controller="GameRequests" asp-action="Details" asp-route-id="@game.GameId" class="btn btn-primary btn-sm"> Details </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No pending game upload requests.</p>
    }
</div>
