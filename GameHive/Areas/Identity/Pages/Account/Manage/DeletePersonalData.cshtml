@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<link rel="stylesheet" href="~/css/Registration.css"/>
<div class="container py-5">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <p class="subtitle">This action permanently removes your account information</p>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">Navigation</h3>
                </div>
                <div class="card-body">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header" style="background: linear-gradient(90deg, #a02c2c 0%, #6a4040 100%);">
                    <h3 class="mb-0">Account Deletion</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert" style="background-color: rgba(255, 193, 7, 0.2); border-color: #ffc107;">
                        <i class="fas fa-exclamation-triangle me-2" style="color: #ffc107; font-size: 1.5rem;"></i>
                        <p style="color: #ffc107; font-weight: 500;">
                            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                        </p>
                    </div>

                    <div class="mt-4">
                        <form id="delete-user" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            @if (Model.RequirePassword)
                            {
                                <div class="input-group">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <input asp-for="Input.Password" class="form-control input-with-icon"
                                           autocomplete="current-password" aria-required="true"
                                           placeholder="Please enter your password." />
                                    <i class="fas fa-lock input-icon"></i>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            }

                            <div class="mt-4 text-center">
                                <button class="btn btn-danger" type="submit" style="
                                    background: linear-gradient(90deg, #a02c2c 0%, #6a4040 100%);
                                    border: none;
                                    padding: 15px;
                                    border-radius: 10px;
                                    font-weight: 600;
                                    letter-spacing: 1px;
                                    text-transform: uppercase;
                                    transition: all 0.3s ease;
                                    position: relative;
                                    overflow: hidden;
                                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                                    margin: 0 auto;
                                    display: inline-flex;
                                    align-items: center;
                                    width: auto;">
                                    <i class="fas fa-trash-alt me-2"></i> Delete data and close my account
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}