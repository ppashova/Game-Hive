@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/Registration.css" />
<div class="container py-5">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <p class="subtitle">Управление на информацията за вашия акаунт</p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">Навигация</h3>
                </div>
                <div class="card-body">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Редактиране на профила</h3>
                </div>
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="input-group">
                            <label asp-for="Username" class="form-label">Потребителско име</label>
                            <input asp-for="Username" class="form-control input-with-icon" placeholder="Моля, изберете потребителско име." />
                            <i class="fas fa-user input-icon"></i>
                        </div>

                        <div class="input-group">
                            <label asp-for="Input.PhoneNumber" class="form-label">Телефонен номер</label>
                            <input asp-for="Input.PhoneNumber" class="form-control input-with-icon" placeholder="Моля, въведете телефонния си номер." />
                            <i class="fas fa-phone input-icon"></i>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-primary">
                            Запази промените <i class="fas fa-save ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}